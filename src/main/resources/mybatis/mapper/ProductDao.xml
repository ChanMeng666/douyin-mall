<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qxy.dao.mapper.ProductDao">
    <resultMap id="ProductResultMap" type="com.qxy.dao.dataobject.ProductDO">
        <id column="product_id" property="id" />
        <result column="name" property="name" />
        <result column="description" property="description" />
        <result column="price" property="price" />
        <result column="stock" property="stock" />
        <result column="created_at" property="createdAt" />
        <result column="update_at" property="updatedAt" />
        <result column="image_url" property="imageUrl" />
    </resultMap>
    <update id="updateProductStock">
        update products set stock = stock - 1
        where product_id = #{productId} and stock >0
    </update>


    <select id="selectByIds" resultMap="ProductResultMap" resultType="com.qxy.dao.dataobject.ProductDO">
        select * from products
        where product_id in
        <foreach collection="productId" open="(" close=")" item="id" separator=",">
            #{id}
        </foreach>
    </select>

</mapper>